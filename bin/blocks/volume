#!/bin/sh

#!/bin/bash
# show-volume.sh

VOLUME_RAW=$(wpctl get-volume @DEFAULT_AUDIO_SINK@)
VOLUME=$(echo "$VOLUME_RAW" | awk '{print int($2 * 100)}')
MUTED=$(echo "$VOLUME_RAW" | grep -q MUTED && echo true || echo false)

if [[ "$MUTED" == "true" ]]; then
    ICON="ğŸ”‡"
else
    if [ "$VOLUME" -eq 0 ]; then
        ICON="ğŸ”ˆ"  # zero
    elif [ "$VOLUME" -le 30 ]; then
        ICON="ğŸ”‰"  # low
    elif [ "$VOLUME" -le 70 ]; then
        ICON="ğŸ”Š"  # medium
    else
        ICON="ğŸ“¢"  # high
    fi
fi

echo "$ICON $VOLUME%"


