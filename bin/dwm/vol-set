#!/bin/bash

MAX_VOL=100

# Get current volume (removes percent and rounds float)
CURRENT_VOL=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{printf "%d", $2 * 100}')

if [[ $1 == "up" ]] && [[ $CURRENT_VOL -lt $MAX_VOL ]]; then
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
elif [[ $1 == "down" ]]; then
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
elif [[ $1 == "mute" ]]; then
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
fi

pkill -RTMIN+12 dwmblocks

